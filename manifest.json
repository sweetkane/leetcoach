{
  "manifest_version": 3,
  "name": "Leetcode GPT",
  "description": "Base Level Extension",
  "host_permissions": [
    "*://*.leetcode.com/"
  ],
  "permissions": ["tabs", "cookies"],
  "version": "1.0",
  "action": {
    "default_popup": "main.html",
    "default_icon": "images/lc-gpt-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "scripts/jquery-3.6.3.js",
        "content.js",
        "scripts/prompt.js",
        "scripts/interface.js"
      ],
      "run_at": "document_end"
    }
  ]
}
